{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "The Root Schema",
  "required": ["firstname", "lastname"],
  "properties": {
    "firstname": {
      "type": "string",
      "title": "The FirstName Schema",
      "default": "",
      "pattern": "^[a-zA-Z0-9]{1,32}$"
    },
    "lastname": {
      "type": "string",
      "title": "The LastName Schema",
      "default": "",
      "pattern": "^[a-zA-Z]{1,32}$"
    }
  }
}